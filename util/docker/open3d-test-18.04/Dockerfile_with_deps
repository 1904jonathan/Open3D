# Open3D Docker test image:
# - based on Ubuntu 18.04
# - Open3D dependencies are installed here

FROM open3d-test-18.04:no_deps

# install Open3D dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    libeigen3-dev \
    libglew-dev \
    libglfw3-dev \
    libjpeg-dev \
    libjsoncpp-dev \
    libpng-dev \
    pybind11-dev && \
    rm -rf /var/lib/apt/lists/*
