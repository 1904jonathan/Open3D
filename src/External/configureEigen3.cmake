SET(LIB_NAME         "Eigen3")
SET(MIN_VERSION      "3.2.7")
SET(DOWNLOAD_VERSION "3.2.10")
SET(DOWNLOAD_TYPE    "URL")
SET(DOWNLOAD_URL     "http://bitbucket.org/eigen/eigen/get/${DOWNLOAD_VERSION}.tar.gz")
SET(BASE_DIR         "${CMAKE_BINARY_DIR}/${LIB_NAME}")
SET(DOWNLOADER_DIR   "${BASE_DIR}-download")
SET(BUILD_SOURCE     OFF)

include(configure.cmake)

IF (NOT ${${LIB_NAME_UPPER}_FOUND})
    SET(${LIB_NAME_UPPER}_INCLUDE_DIR ${BASE_DIR} CACHE PATH "The path to ${LIB_NAME} headers" FORCE)
    MESSAGE(STATUS "${LIB_NAME_UPPER}_INCLUDE_DIR: ${${LIB_NAME_UPPER}_INCLUDE_DIR}")
ENDIF()

IF (Open3D_INSTALL_EXTERNALS)
    install(DIRECTORY ${${LIB_NAME_UPPER}_INCLUDE_DIR}/Eigen
        DESTINATION include COMPONENT Devel)
ENDIF()
